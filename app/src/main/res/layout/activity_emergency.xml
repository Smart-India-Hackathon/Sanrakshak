<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7dbb5522"
    tools:context="fusedlocation.harisevak.com.fuseloc2.EmergencyActivity"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/emergencyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are on Emergency Screen"
        android:textColor="#FFFF"
        android:textSize="25sp"
        android:textAlignment="center"
        android:background="#bb8822"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Submit additional details, if possible."
        android:textColor="#FFFF"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="#bb8822"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Enter Description here"
        android:ems="20"
        android:inputType="textMultiLine"
        android:lines="6"
        android:ellipsize="start"
        android:gravity="center"
        android:background="@drawable/edittextstyle"
        />

    <Button
        android:id="@+id/emergencyMediaBtn"
        android:layout_width="wrap_content"
        android:text="Attach Media Files..."
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:background="#edd188"
        android:id="@+id/emergencySubmitBtn"
        android:layout_width="200dp"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@id/emergencyMediaBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
